<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <appender name="RichTextBoxAppender" type="JIMapTrans.Logger.RichTextBoxAppender">
      <mapping>
        <level value="WARN" />
        <foreColor value="OrangeRed" />
        <isItalic value="true" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="ControlText" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Gray" />
      </mapping>
      <mapping>
        <level value="FATAL" />
        <foreColor value="Red" />
        <isBold value="true" />
        <isItalic value="true" />
        <pointSize value="10" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red" />
        <isBold value="false" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <!--<conversionPattern value="%date{yy/MM/dd HH:mm:ss} [%thread] %-5level %logger [%property{NDC}] - %message%newline" /> -->
        <!--<conversionPattern value="%message%newline%exception" /> -->
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>

    <logger name = "logger" >
      <level value="ALL" />
      <appender-ref ref="RichTextBoxAppender" />
    </logger>
  </log4net>
</configuration>